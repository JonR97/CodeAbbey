#include <iostream>
using namespace std;

int main(){
  int counter;
  int number;
  int total = 0;
  cout << "Please enter the amount of numbers you want to input: ";
  cin >> counter;
  while(counter>0){
    number = 0;
    counter--;
    cout << "Please enter a number: ";
    cin >> number;
    total += number;
  }
  cout << total;
}
